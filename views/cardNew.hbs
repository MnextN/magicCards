<div style="width: 500px; margin-top: 100px;" class="container">

  <form enctype="multipart/form-data" method="post" action="/card/new">

    <div class="form-group">
      <label for="exampleInputEmail1">Имя вашей карточки</label>
      <input autocomplete="off" required name="card_name" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Цена</label>
      <input autocomplete="off" required name="card_price" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Ссылка для загрузки изображения</label>
      <input autocomplete="off" required name="card_url" type="file" class="form-control">
    </div>

    <select required name="id_condition" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
      <option value="" disabled selected>Укажите состояние вашей карточки</option>
      <option value="1">Отличное</option>
      <option value="2">Среднее</option>
      <option value="3">Плохое</option>
    </select>

    <div id="infoCardNew">
      {{!-- info --}}
    </div>

    <button type="submit" class="btn btn-primary">Создать карточку</button>

  </form>

</div>
