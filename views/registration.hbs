<div class="container text-white">
<form class="row g-3 mt-4" id="formRegistration" action="/registration" method="post">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">E-mail:</label>
    <input type="email" name="user_email" class="form-control" id="inputEmail4" required>
  </div>
  <div class="col-md-6">
    <label for="inputPassword4" class="form-label">Пароль:</label>
    <input type="password" name="user_password" class="form-control" id="inputPassword4" required>
  </div>
  <div class="col-md-6 mt-4">
    <label for="inputEmail4" class="form-label">Имя:</label>
    <input type="text" name="user_name" class="form-control" id="inputEmail4" required>
  </div>

  <div class="col-md-6 mt-4">
    {{!-- <label for="inputCity" class="form-label">Ваш город:</label>
    <input type="text" name="id_city" class="form-control" id="inputCity" required> --}}
      <label for="inputEmail4" class="form-label">Город:</label>
     <select required name="id_city" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
      <option value="" disabled selected>Укажите ваш город</option>
      {{#each cities}}
      <option value={{id}}> {{city_name}}</option>
      {{/each}}
     </select>
  </div>

  <div class="col-12 mt-4 d-flex mb-4 align-items-center">
    <button type="submit" class="btn btn-dark mb">Зарегистрироваться</button>
    <div class="container" id="errorMessageRegistration"></div>
  </div>
  {{!-- <div class="col-md-6">
    
  </div> --}}
</form>
</div>

